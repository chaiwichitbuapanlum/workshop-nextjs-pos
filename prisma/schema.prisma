generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  status    String   @default("Active")
  role      String   @default("Customer")
  pictureId String?
  picture   String?
  address   String?
  tel       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Category {
  id        String   @id @default(cuid())
  name      String
  status    String   @default("Active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}